@model IEnumerable<CodeFirst.Models.Agenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Hora_Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Hora_Fin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Odontologo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Hora_Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Hora_Fin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Odontologo.IDOdontologo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.IDPaciente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDAgenda">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDAgenda">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDAgenda">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
